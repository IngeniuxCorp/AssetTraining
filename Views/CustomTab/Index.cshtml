<!DOCTYPE html>
@{
	string currentURL = Request.Url.GetLeftPart(UriPartial.Path).ToString();
	string hubsPath = VirtualPathUtility.ToAbsolute("~/signalr/hubs", Context.Request.ApplicationPath);
}
	<html>
	<head>
		@*"~/AppAsset/{ProjectFolder}" is the route for serving project files in the custom folder*@
		<title>Custom tab QuickStart</title>
		<base href="~/AppAsset/v10CustomTabBase/src/">
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="styles.css">
		
		<link rel="stylesheet" href="~/AppAsset/v10CustomTabBase/node_modules/@("@")angular/material/prebuilt-themes/indigo-pink.css">

		<!-- Polyfill(s) for older browsers -->
		<script src="~/AppAsset/v10CustomTabBase/node_modules/core-js/client/shim.min.js"></script>
		<script src="~/AppAsset/v10CustomTabBase/node_modules/zone.js/dist/zone.js"></script>
	</head>
	<body>
		<custom-tab BaseURL="@currentURL">Loading AppComponent content here ...</custom-tab>
		
		@if (Model.IsDebug)
		{
			<script src="~/AppAsset/v10CustomTabBase/node_modules/systemjs/dist/system.src.js"></script>
			<script src="~/AppAsset/v10CustomTabBase/src/systemjs.config.js"></script>
			<script>
				System.import('main-jit.js').catch(function (err) { console.error(err); })
				.then(function () {
					return System.import('@hubsPath');
				});
			</script>
			@*<script language="javascript" src="~/signalr/hubs"></script>*@
		}
		else
		{
			<script src="build.js"></script>
			<script language="javascript" src="~/signalr/hubs"></script>
		}

		
	</body>
</html>
