<!DOCTYPE html>
@{
	string basePath = Model.AssetPath+"/src/";
}
	<html>
	<head>
		@*"~/AppAsset/{ProjectFolder}" is the route for serving project files in the custom folder*@
		<title>Custom tab QuickStart</title>
		<base href="@basePath">
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		<link rel="stylesheet" href="styles.css">
		@if (Model.IsDebug)
		{
			<link rel="stylesheet" href="~/AppAsset/v10CustomTabBase/node_modules/@("@")angular/material/prebuilt-themes/indigo-pink.css">
		}
		else
		{
			<link rel="stylesheet" href="@Model.AssetPath/Content/Styles/indigo-pink.css">
		}

		@if (Model.IsDebug)
		{
			<!-- Polyfill(s) for older browsers -->
			<script src="~/AppAsset/v10CustomTabBase/node_modules/core-js/client/shim.min.js"></script>

			<script src="~/AppAsset/v10CustomTabBase/node_modules/zone.js/dist/zone.js"></script>
			<script src="~/AppAsset/v10CustomTabBase/node_modules/systemjs/dist/system.src.js"></script>
			<script src="~/AppAsset/v10CustomTabBase/src/systemjs.config.js"></script>
			<script src="~/AppAsset/v10CustomTabBase/node_modules/jquery/dist/jquery.min.js"></script>
			<script src="~/AppAsset/v10CustomTabBase/node_modules/signalr/jquery.signalR.js"></script>
			<script src="~/signalr/hubs"></script>
			<script>
				System.import('main-jit.js').catch(function (err) { console.error(err); });
			</script>
		}

	</head>
	<body>
		<script>
			if (window.opener) {
				window.close();
			}
		</script>
		<custom-tab HasToken="@Model.HasToken" BaseURL="@Model.CurrentURL">Loading AppComponent content here ...</custom-tab>
		
		@if (!Model.IsDebug)
		{
			<script src="modules.js"></script>
			<script language="javascript" src="~/signalr/hubs"></script>
			<script src="build.js"></script>
		}
	</body>
</html>
